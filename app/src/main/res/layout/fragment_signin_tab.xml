<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sign_in_scroll"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:src="@drawable/logo"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign In"
                android:textSize="30sp"
                android:gravity="center"
                android:background="@color/Soft_Blue"
                android:textStyle="bold"
                android:textColor="@color/Navy_Blue"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <EditText
                    android:layout_width="280dp"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext_bg"
                    android:layout_gravity="center"
                    android:id="@+id/signin_user"
                    android:layout_marginTop="10dp"
                    android:padding="8dp"
                    android:inputType="textEmailAddress"
                    android:hint="Email"
                    android:drawableStart="@drawable/email"
                    android:drawablePadding="8dp"
                    />
                <Spinner
                    android:id="@+id/user_role_spinner"
                    android:background="@drawable/edittext_bg"
                    android:layout_width="280dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:padding="8dp"
                    android:drawableStart="@drawable/user"
                    android:drawableEnd="@drawable/drop_down"
                    android:drawablePadding="8dp"
                    />

                <EditText
                    android:layout_width="280dp"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext_bg"
                    android:layout_gravity="center"
                    android:id="@+id/signin_password"
                    android:inputType="textPassword"
                    android:layout_marginTop="20dp"
                    android:padding="8dp"
                    android:hint="Password"
                    android:drawableStart="@drawable/password"
                    android:drawablePadding="8dp"
                    />
                <Button
                    android:layout_width="280dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:id="@+id/signin_button"
                    android:text="SIGN IN"
                    android:textSize="18sp"
                    />

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="280dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_height="wrap_content"
                    android:text="I don't have any account\nSwipe right for sign up"
                    android:shadowColor="@color/Bright_Teal"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</ScrollView>
